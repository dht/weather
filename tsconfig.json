{
  "compilerOptions": {
    "typeRoots": ["./src/lib-types", "./node_modules/@types"],
    "lib": ["dom", "dom.iterable", "esnext", "DOM", "ES2020"],
    "target": "ES2020",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "../",
    "paths": {
      "@gdi/auth": ["packages/gdi-auth"],
      "@gdi/firebase": ["packages/gdi-firebase"],
      "@gdi/ui": ["packages/gdi-ui"],
      "@gdi/store-base": ["packages/store-base"],
      "@gdi/widgets-starter": ["packages/widgets"],
      "@gdi/app-home": ["apps/home"],
      "@gdi/app-boards": ["apps/boards"],
      "@gdi/app-docs": ["apps/docs"],
      "redux-connected": ["packages/redux-connected"],
      "igrid": ["packages/igrid"],
      "multi": ["packages/multi"],
      "isokit": ["packages/isokit"]
    }
  },
  "include": ["src"],
  "exclude": ["src/test"]
}
